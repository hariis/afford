<%= image_tag ("/images/base-pb-you.png") unless current_user %>
<%= image_tag ("/images/loggedin-pb-you.png") if current_user %><br/><br/>
<fieldset>
    <legend><b>About You and your Purchase</b></legend>
  <p style="margin-top:8px;">
    <b><%= f.label :item_name, "I want to" %></b>
    <%= f.text_field :item_name, :size => 63, :maxlength => 200,
                 :onblur => "if (this.value == '') {this.value = 'Example: Buy a Car';this.style.color='#999999';}", :onfocus => "if (this.value == 'Example: Buy a Car') {this.value = '';} this.style.color='#333333';" %>
    <span style="font-size:12px;padding-left:73px;color:#0000ff;">Example: Buy a TV, Visit Europe, Go on a Cruise</span><br/><br/>
  </p>
  <p>
    <%= f.label :reason_to_buy, "Why do you want it?" %><br />
    <%= f.select( :reason_to_buy, (Question::REASON_TO_BUY.sort{|v1,v2| v1[1] <=> v2[1]}.collect{|k| [k[0],k[1] ]}),{:selected => @reason_to_buy.to_s}) %>    
  </p>

  <p>
    <%= f.label :item_cost, "What is the Total Cost of your Purchase?" %><br />    
    <%= f.text_field :item_cost %><span style="font-size:12px;color:#0000ff;">(Minimum: $100 Maximum: $1,000,000)</span>
  </p>
  <p>
    <%= f.label :recurring_item_cost, "Any Additional Monthly Costs for your purchase" %><br />
    <span style="font-size:12px;color:#0000ff;">(Example: Insurance for a car, Vet visits for a Pet, Maintenance cost, Subscription cost)</span><br />
    <%= f.text_field :recurring_item_cost %>
  </p>
</fieldset>
<fieldset>
  <legend><b>About You</b></legend>
  <p>
    <%= f.label :age, "Your Age" %><br />    
    <%= f.text_field :age %><span style="font-size:12px;color:#0000ff;">(Minimum: 20 Maximum: 65)</span>
  </p>
 <% unless current_user %>
   <p>
    <%= f.label :nick_name, "Choose a Nick Name" %><br />
    <%= f.text_field :nick_name, :maxlength => 20 %>
   </p>
 <% end %>
</fieldset>
