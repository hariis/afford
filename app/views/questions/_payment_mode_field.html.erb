<%= image_tag ("/images/base-pb-pay.png") unless current_user %>
<%= image_tag ("/images/loggedin-pb-pay.png") if current_user %><br/><br/>
<fieldset>
   <legend><b>How are you going to pay for the Item?</b><span style="font-size:14px;"> (Exclude monthly recurring costs)</span></legend>
   <span style="color:green;font-weight:bold;"><%= "Item Cost: $" + @item_cost.to_s %></span

  <p>
    <%= f.label :pm_saving_amount, "Contribution from Savings" %><br />
    <%= f.text_field :pm_saving_amount, :rows => 5, :cols => 72 %>
  </p>
  <p>
    <%= f.label :pm_investment_amount, "Contribution from Investments" %><br />
    <%= f.text_field :pm_investment_amount %>
  </p>
  <p>
    <%= f.label :pm_financing_amount, "If Financing, Loan Payment per month" %><br />
    <%= f.text_field :pm_financing_amount %>
  </p>

</fieldset>