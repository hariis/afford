<div class="<%= cycle('snippet-odd','snippet-even') %> ">
  <%= render :partial => 'snippet_body', :locals => {:question => question} %>

  <div class="snippet-footer">
    <%=  link_to "View Financial Details", :controller => :questions, :action => :show, :id => question.id %> |
    <% responses_text = question.responses.size > 0 ? pluralize(question.responses.size, 'response') + " from the community" : "Be the first to respond" %>
    <%=  link_to responses_text, :controller => :questions, :action => :show, :id => question.id , :anchor => 'responses' %>
  </div
</div>



