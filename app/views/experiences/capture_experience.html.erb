<script type="text/javascript">
  function openWindow(url) {
    var w = 480, h = 340;

      if (document.all) {
         /* the following is only available after onLoad */
         w = document.body.clientWidth;
         h = document.body.clientHeight;
      }
      else if (document.layers) {
         w = window.innerWidth;
         h = window.innerHeight;
      }
      var popW = 800, popH = 450;
      var leftPos = (w)/2, topPos = (h)/2;
      window.open(url, 'Authorize','width=' + popW + ',height='+popH+',top='+topPos+ ',left='+leftPos);

      return true;
    }

</script>


<fieldset>
<div id="experience">   
    <% form_remote_tag :url => { :controller => 'experiences', :action => "store_experience" } do %>
       <h3>What do you think of CanIAffordItNow? Your feedback is greatly appreciated.</h3>
       
        To help us prioritize, please choose a type: <br/>
        <%= select_tag :feedback_type, options_for_select(Experience::COMMENT_TYPES.sort { |v1,v2| v1[1].to_i <=> v2[1].to_i}.collect{|k| [ k[0],k[1] ]}, 0 ) %>
        <br/><br/>
        <p>
            <%= text_area_tag :description, "Let us know what you think!", :cols => "50", :rows => "4",
                                                 :onblur => "if (this.value == '') {this.value = 'Let us know what you think!';}", :onfocus => "if (this.value == 'Let us know what you think!') {this.value = '';}" -%>                  
        </p><br/>
        <p>
            <%= text_field_tag :email, "Your email (optional) for us to reach you", :size => 45,
                                                 :onblur => "if (this.value == '') {this.value = 'Your email (optional) for us to reach you';}", :onfocus => "if (this.value == 'Your email (optional) for us to reach you') {this.value = '';}" -%>
        </p>

        <br/><%= submit_tag "Share Feedback" %>
    <% end %>
   
    <div id="experiences-status" style="margin-left:10px;margin-top:10px;font-weight:bold;color:red;"></div>
</div>
</fieldset> 

