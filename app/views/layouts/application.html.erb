          <div style="float:right;">
        <%= link_to image_tag('/images/ask.png'), {:controller => :questions , :action => :new} %>
        </div>

      <% end %>
  

      <div id="main">
          <div id="flash-notice" style="color:#0B84E8;">
             <p><%= flash[:notice] %></p>
          </div>
          <div id="flash-error" style="color:#0B84E8;">
             <p><%= flash[:error] %></p>
          </div>
         
  <% if controller.action_name != 'about' && controller.action_name != 'tos' && controller.action_name != 'privacy' %>     
        <% if current_user %>
              <div id="user-stat">
                <%= current_user.username %> | <%= pluralize current_user.responses.count, 'response' %> |
                 agreed with Expert: <%= @user_agreed_with_expert %>  |
                 agreed with Community: <%= @user_agreed_with_community %>
              </div><br/>
         <% end %>      
   <% end %>

  <span id="feedback" style="display:none;"><% facebox_link_to "Feedback",  {:url => DOMAIN + "experiences/capture_experience"} %></span>

